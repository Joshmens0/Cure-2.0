<UserControl x:Class="Cure_2._0.InputDisplayTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cure_2._0"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Height="50" VerticalAlignment="Top" x:Name="ProfileImage" Source="/user.jpeg" Stretch="Uniform" Margin="10"/>
        <TextBlock x:FieldModifier="public"
                   Grid.Column="1" VerticalAlignment="Stretch" x:Name="DisplayUserInput" 
                   Background="#181a1a" HorizontalAlignment="Stretch" 
                   TextAlignment="Left" Padding="15" FontSize="20" FontFamily="Monospace"
                   FontWeight="Bold" Margin="10" TextWrapping="Wrap" Foreground="White" 
                   />
    </Grid>
</UserControl>
